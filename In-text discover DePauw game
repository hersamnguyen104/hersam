public class ScreenAction implements ActionListener {
	public void actionPerformed(ActionEvent event)
	{
		gameScreen();
	}
}	
public class ChoiceControl implements ActionListener {
	public void actionPerformed(ActionEvent event)
	{
		String yourChoice = event.getActionCommand();
		switch(position) {
		case "gate": 
			switch(yourChoice) {
			case "c1": admission(); break;
			case "c2": asbury(); break;
			case "c3": rotation(); break;
			case "c4": out(); break;
			}
		break;
		case "admission": 
			switch(yourChoice) {
			case "c1": gobin(); break;
			case "c2": asbury(); break;
			case "c3": rotation(); break;
			case "c4": gate(); break;
			}
		break;
		case "asbury": 
			switch(yourChoice) {
			case "c1": theinn(); break;
			case "c2": admission(); break;
			case "c3": harrison(); break;
			case "c4": gate(); break;
			}
		break;
		case "rotation":
			switch(yourChoice) {
			case "c1": eastCollege(); break;
			case "c2": library(); break;
			case "c3": harrison(); break;
			case "c4": gate(); break;
			}
		break;
		case "theInn": 
			switch (yourChoice) {
			case "c1": restaurant(); break;
			case "c2": out(); break;
			case "c3": library(); break;
			case "c4": gate(); break;
			}
		break;
		case "harrison":
			switch (yourChoice) {
			case "c1": eastCollege(); break;
			case "c2": out(); break;
			case "c3": frat(); break;
			case "c4": gate(); break;
			}
		break;
		case"eastCollege": 
			switch (yourChoice) {
			case "c1": mason(); break;
			case "c2": harrison(); break;
			case "c3": plaza();
			case "c4": gate(); break;
			}
		break;
		}
	}
}	
}
